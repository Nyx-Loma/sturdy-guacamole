{
  "name": "@sanctum/messaging",
  "version": "0.1.0",
  "description": "Sanctum messaging service with E2EE support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/app/server.ts",
    "start": "node dist/app/server.js",
    "test": "pnpm run lint && pnpm run typecheck && pnpm run test:unit",
    "test:unit": "pnpm run test:unit:routes && pnpm run test:unit:app && pnpm run test:unit:stream && pnpm run test:unit:usecases && pnpm run test:unit:domain && pnpm run test:unit:ports && pnpm run test:unit:infra && pnpm run test:unit:ws",
    "test:unit:routes": "pnpm vitest run src/tests/unit/routes",
    "test:unit:app": "pnpm vitest run src/tests/unit/app",
    "test:unit:stream": "pnpm vitest run src/tests/unit/stream",
    "test:unit:usecases": "pnpm vitest run src/tests/unit/usecases",
    "test:unit:domain": "pnpm vitest run src/tests/unit/domain",
    "test:unit:ports": "pnpm vitest run src/tests/unit/ports",
    "test:unit:infra": "pnpm vitest run src/tests/unit/infra",
    "test:unit:ws": "pnpm vitest run src/tests/unit/ws",
    "test:watch": "pnpm --filter @sanctum/messaging vitest watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rimraf dist coverage .vite .eslintcache"
  },
  "dependencies": {
    "@fastify/websocket": "^11.0.1",
    "@sanctum/config": "workspace:*",
    "@sanctum/crypto": "workspace:*",
    "@sanctum/storage": "workspace:*",
    "@sanctum/transport": "workspace:*",
    "fastify": "^5.6.1",
    "ioredis": "^5.8.0",
    "jose": "^5.9.3",
    "pg": "^8.13.1",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "rfc4648": "^1.5.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.1.1",
    "@stryker-mutator/vitest-runner": "^9.1.1",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "fast-check": "^4.3.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.2.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
