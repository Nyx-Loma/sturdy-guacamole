{
  "name": "@sanctum/messaging",
  "version": "0.1.0",
  "description": "Sanctum messaging service with E2EE support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/app/server.ts",
    "start": "node dist/app/server.js",
    "test": "pnpm run lint && pnpm run typecheck && pnpm run test:unit",
    "test:unit": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192' vitest run --no-coverage",
    "test:cov": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192 --heapsnapshot-near-heap-limit=2' vitest run --coverage --pool=forks --maxWorkers=1",
    "test:ci": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192' vitest run --no-coverage --pool=forks --maxWorkers=1",
    "test:ci:cov": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192 --heapsnapshot-near-heap-limit=2' vitest run --coverage --pool=forks --maxWorkers=1 && ../../scripts/ci-mem-guard.sh",
    "test:unit:routes": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/tests/unit/routes --no-coverage",
    "test:unit:app": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/tests/unit/app --no-coverage",
    "test:unit:stream": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/tests/unit/stream --no-coverage",
    "test:unit:usecases": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/tests/unit/usecases --no-coverage",
    "test:unit:domain": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/tests/unit/domain --no-coverage",
    "test:unit:ports": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/tests/unit/ports --no-coverage",
    "test:unit:infra": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/tests/unit/infra --no-coverage",
    "test:unit:ws": "NODE_OPTIONS='--max-old-space-size=8192' vitest run src/tests/unit/ws --no-coverage",
    "test:watch": "vitest watch --no-coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rimraf dist coverage .vite .eslintcache"
  },
  "dependencies": {
    "@fastify/websocket": "^11.0.1",
    "@sanctum/config": "workspace:*",
    "@sanctum/crypto": "workspace:*",
    "@sanctum/storage": "workspace:*",
    "@sanctum/transport": "workspace:*",
    "fastify": "^5.6.1",
    "ioredis": "^5.8.0",
    "jose": "^5.9.3",
    "pg": "^8.13.1",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "rfc4648": "^1.5.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.1.1",
    "@stryker-mutator/vitest-runner": "^9.1.1",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "fast-check": "^4.3.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.2.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
