{
  "name": "sanctum-platform",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist coverage .vite .eslintcache",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "build": "tsc -b",
    "lint": "eslint --report-unused-disable-directives --max-warnings=0 .",
    "test": "vitest --run --coverage",
    "check:coverage": "node ./scripts/check-coverage.mjs",
    "migrate:auth": "pnpm --filter services/auth run migrate",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/libsodium-wrappers": "^0.7.10",
    "@types/node": "24.5.2",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "9.36.0",
    "husky": "^9.1.7",
    "ioredis-mock": "8.9.0",
    "lint-staged": "^16.2.1",
    "pino": "^9.11.0",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.1",
    "vitest": "3.2.4",
    "zod": "4.1.11"
  },
  "dependencies": {
    "@fastify/auth": "5.0.2",
    "@fastify/websocket": "11.2.0",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "@sanctum/crypto": "workspace:*",
    "@sanctum/transport": "workspace:*",
    "argon2": "^0.44.0",
    "fast-check": "^4.3.0",
    "fastify": "5.6.1",
    "ioredis": "5.8.0",
    "jest-mock-extended": "4.0.0",
    "jose": "^6.1.0",
    "libsodium-wrappers": "0.7.13",
    "pg": "^8.16.3",
    "prom-client": "15.1.3",
    "rate-limiter-flexible": "7.4.0",
    "uuid": "13.0.0",
    "ws": "8.18.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,css,scss,yml,yaml}": [
      "eslint --fix"
    ]
  }
}
