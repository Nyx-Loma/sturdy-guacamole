{
  "title": "Messaging HTTP",
  "uid": "messaging-http",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "5xx rate (5m)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(messaging_http_requests_total{statusCode=~\"5..\"}[5m]))",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "type": "stat",
      "title": "RPS (5m)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(messaging_http_requests_total[5m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 latency (ms)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(messaging_http_request_duration_ms_bucket[5m])))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests by status",
      "gridPos": { "x": 0, "y": 11, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "sum by (statusCode) (rate(messaging_http_requests_total[5m]))",
          "legendFormat": "{{statusCode}}"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top error routes (5m)",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "topk(10, sum by (route,method,statusCode) (rate(messaging_http_requests_total{statusCode=~\"4..|5..\"}[5m])))",
          "legendFormat": "{{method}} {{route}} {{statusCode}}"
        }
      ]
    }
  ]
}


